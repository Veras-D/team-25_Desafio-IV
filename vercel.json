{
    "version": 2,
    "cleanUrls": true,
    "functions": {
      "api/index.js": {
        "memory": 1024,
        "maxDuration": 30
      },
      "api/controller/*.js": {
        "memory": 1024,
        "maxDuration": 30
      }
    },
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/controller/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ]
  }  