{
    "version": 2,
    "cleanUrls": true,
    "functions": {
      "src/index.js": {
        "memory": 1024,
        "maxDuration": 30
      },
      "src/controller/*.js": {
        "memory": 1024,
        "maxDuration": 30
      }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/src/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}